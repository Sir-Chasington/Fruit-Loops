{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "globals": {
        "document": true,
        "GM_getValue": true,
        "GM_setValue": true,
        "GM_notification": true,
        "window": true
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignoreComments": true,
                "ignorePattern": "\\s*<",
                "ignoreStrings": true
            }
        ],
        "no-console": [
            "error",
            {
                "allow": [ "error", "info", "warn" ]
            }
        ]
    }
}
